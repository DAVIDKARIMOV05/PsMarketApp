@model PsMarketApp.Models.Slider

@{
    ViewData["Title"] = "Listeyi Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="admin-card card-sari" style="padding: 40px; position: relative;">

                <div style="position: absolute; top: -30px; left: -30px; width: 100px; height: 100px; background: rgba(255, 215, 0, 0.2); filter: blur(40px); border-radius: 50%;"></div>

                <h2 class="text-center mb-5" style="color: #ffd700; text-transform: uppercase; font-weight: bold; text-shadow: 0 0 15px rgba(255, 215, 0, 0.6); letter-spacing: 2px;">
                    ✏️ Listeyi Düzenle
                </h2>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-4">
                        <label asp-for="Baslik" class="control-label" style="color: #ffd700; font-weight: bold; font-size: 1.1rem;">📂 Slider / Liste İsmi</label>
                        <input asp-for="Baslik" class="form-control" placeholder="Örn: Haftanın Fırsatları"
                               style="background: rgba(0,0,0,0.4); border: 1px solid #ffd700; color: white; padding: 12px; font-size: 1.1rem;" />
                        <small class="text-muted" style="color: #ccc !important;">Bu isim ana sayfada başlık olarak görünecektir.</small>
                        <span asp-validation-for="Baslik" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-3">
                        <button type="submit" class="btn btn-lg"
                                style="background: linear-gradient(45deg, #ffd700, #ffbf00); color: #000; font-weight: bold; border-radius: 50px; border: none; box-shadow: 0 0 20px rgba(255, 215, 0, 0.4); transition: transform 0.2s;">
                            💾 İSMİ GÜNCELLE
                        </button>

                        <a asp-action="Index" class="btn btn-lg"
                           style="background: transparent; border: 2px solid #fff; color: #fff; font-weight: bold; border-radius: 50px;">
                            ❌ İPTAL ET
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}