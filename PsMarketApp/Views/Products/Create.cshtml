@model PsMarketApp.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="admin-card card-yesil" style="padding: 40px;">

                <h2 class="text-center mb-4" style="color: #25D366; text-transform: uppercase; font-weight: bold; text-shadow: 0 0 10px rgba(37, 211, 102, 0.5);">
                    ✨ Yeni Ürün Oluştur
                </h2>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label" style="color: #ffd700; font-weight: bold;">📦 Ürün Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: FIFA 25"
                               style="background: rgba(0,0,0,0.5); border: 1px solid #25D366; color: white;" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label" style="color: #00ffff; font-weight: bold;">🖼️ Ürün Resmi Seç</label>
                        <input type="file" name="file" class="form-control" accept="image/*"
                               style="background: rgba(0,0,0,0.5); border: 1px solid #00ffff; color: white;" />
                        <small style="color: #ccc;">Sadece .jpg, .png veya .avif yükleyiniz.</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="Price" class="control-label" style="color: #25D366; font-weight: bold;">💰 Fiyat (AZN)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control"
                                   style="background: rgba(0,0,0,0.5); border: 1px solid #25D366; color: white;" />
                        </div>

                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="OldPrice" class="control-label" style="color: #ff6b6b; font-weight: bold;">📉 Eski Fiyat (Opsiyonel)</label>
                            <input asp-for="OldPrice" type="number" step="0.01" class="form-control"
                                   style="background: rgba(0,0,0,0.5); border: 1px solid #ff6b6b; color: white;" />
                        </div>
                    </div>

                    <div class="form-group mb-4 p-3 rounded" style="border: 2px dashed #ffd700; background: rgba(255, 215, 0, 0.1);">
                        <label class="control-label fw-bold mb-2" style="color: #ffd700;">📂 Slider (Kayan Liste) Ayarları</label>

                        <select asp-for="SliderId" class="form-control mb-2" asp-items="ViewBag.SliderId"
                                style="background: rgba(0,0,0,0.6); border: 1px solid #ffd700; color: white;">
                            <option value="">-- Var Olan Listeden Seç --</option>
                        </select>

                        <div class="text-center small my-2" style="color: #aaa;">- VEYA -</div>

                        <input type="text" name="YeniSliderIsmi" class="form-control" placeholder="➕ Yeni Bir Liste Oluştur"
                               style="background: rgba(0,0,0,0.6); border: 1px solid #ffd700; color: white;" />
                        <small style="color: #ccc;">Buraya yazarsan otomatik olarak yeni liste oluşur.</small>
                    </div>

                  

                    <div class="d-grid gap-2">
                        <input type="submit" value="✅ Ürünü Kaydet" class="btn btn-lg"
                               style="background-color: #25D366; color: white; font-weight: bold; border-radius: 50px; border:none; box-shadow: 0 0 10px #25D366;" />

                        <a asp-action="Index" class="btn btn-lg"
                           style="background-color: transparent; border: 2px solid #ff6b6b; color: #ff6b6b; font-weight: bold; border-radius: 50px;">
                            ❌ İptal
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}